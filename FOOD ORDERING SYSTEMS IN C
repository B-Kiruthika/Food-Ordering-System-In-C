int main()
{
    int n,a,b,c,d,e,f,f1,f2,f3,f4,f5;
    printf("**RESTAURANT MANAGEMENT**\n");
    printf("Restuarant Places:\n");
    printf("1.Karur\n");
    printf("2.Namakkal\n");
    printf("3.Dindugal\n");
    printf("Enter the  Place (1 to 3):");
    scanf("%d",&n);
    switch(n)
    {
        case 1:
        printf("Karur");
        printf("\nRestaurant Names :");
        printf("\"1-Masha Allah\" \"2-11 To 11\"");
        printf("\nEnter your choice of restaurant:");
        scanf("%d",&a);
        switch(a)
        {
            case 1:
             f=item1();
            break;
            case 2:
            f1=item2();
            break;
        }
        break;
        case 2:
        printf("\nNamakkal");
        printf("\nRestaurant Names:");
        printf("\"1-CIBO\" \"2-RAINBOW\"");
        printf("\nEnter your choice of restaurant:");
        scanf("%d",&b);
        switch(b)
        {
            case 1:
            {
            f2=item3();
            break;
            }
            case 2:
            {
                f3=item4();
                break;
            }
        
        break;
        }
        case 3:
        printf("\nDindugal");
        printf("\nRestaurant Names:");
        printf("\"1-Thalapakatti\" \"2-Temptations\"");
        printf("\nEnter your choice of restaurant:");
        scanf("%d",&c);
        switch(c)
        {
            case 1:
