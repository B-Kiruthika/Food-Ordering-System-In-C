#include <stdio.h>
#include <string.h>
int item1()
{
    int choice;
    printf("\nWelcome to the Restaurant!!!!!!!!\n");
    printf("Today's Menu in Masha Allah Restaurant :\n");
    printf("1. Dosa - Rs.25\n");
    printf("2. Chapathi- Rs.20\n");
    printf("3. Idly- Rs.10\n");
    printf("4. Pongal- Rs.15\n");
    printf("5. Tea- Rs.10\n");
    double total = 0.0;
    do {
        printf("Enter your choice of order (1-5):\n");
        scanf("%d", &choice);
        switch(choice) {
            case 1:
                total += 25;
                printf("Total cost of Dosa :%.2f\n", total);
                break;
            case 2:
                total += 20;
                printf("Total cost of  Chapathi :%.2f\n", total);
                break;
            case 3:
                total += 10;
                printf("Total cost of Idly :%.2f\n", total);
                break;
            case 4:
                total += 15;
                printf("Total cost of Pongal :%.2f\n", total);
                break;
            case 5:
                total += 10;
                printf("Total cost of Tea :%.2f\n", total);
                break;
            case 6:
            printf("Exit.Thank You For Your Oder...!!!\n");
            break;
            default:
                printf("\nInvalid choice.Please select other choice..\n");
        }
    }
    while(choice==1 || choice==2||choice==3||choice==4 || choice==5||choice==6);
}
